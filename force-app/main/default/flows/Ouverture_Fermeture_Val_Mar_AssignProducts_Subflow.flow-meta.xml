    <formulas>
        <name>price</name>
        <dataType>Currency</dataType>
        <expression>IF(
{!isWorkType} , 0 ,
 IF(
{!assetPrice} &lt;&gt; 0 , {!assetPrice} , {!pbe.UnitPrice}  )
)</expression>
