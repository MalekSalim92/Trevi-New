    <formulas>
        <name>email</name>
        <dataType>String</dataType>
        <expression>IF(
OR( ISNULL({!woli.Id}) , ISBLANK({!woli.Id})),
{!order.Account.Email__c},
{!contact.Email}
)</expression>
    </formulas>
    <formulas>
        <name>firstName</name>
        <dataType>String</dataType>
        <expression>IF(
OR( ISNULL({!woli.Id}) , ISBLANK({!woli.Id})),
{!order.BillToContact.FirstName},
{!contact.FirstName}
)</expression>
    </formulas>
    <formulas>
        <name>gst</name>
        <dataType>String</dataType>
        <expression>IF(
LOWER({!transactionType}) = &apos;refund&apos;,&apos;0&apos;,
IF(
OR( ISNULL({!woli.Id}) , ISBLANK({!woli.Id})),
TEXT({!order.TotalAmount} * {!order.GST__c}),
TEXT({!woli.Outstanding_Amount_Before_Tax__c} * {!woli.GST__c})
)
)</expression>
    </formulas>
    <formulas>
        <name>hst</name>
        <dataType>String</dataType>
        <expression>IF(
LOWER({!transactionType}) = &apos;refund&apos;,&apos;0&apos;,
IF(
OR( ISNULL({!woli.Id}) , ISBLANK({!woli.Id})),
TEXT({!order.TotalAmount} * {!order.HST__c}),
TEXT({!woli.Outstanding_Amount_Before_Tax__c} * {!woli.HST__c})
))</expression>
    </formulas>
    <formulas>
